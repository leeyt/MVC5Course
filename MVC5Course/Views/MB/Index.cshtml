@model IEnumerable<MVC5Course.Models.Product>

<h2>@ViewData["PageTitle"]</h2>

@using (Html.BeginForm())
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
        </tr>

        @{ 
            var batch = Model.ToArray();
            var i = 0;
        }

    @foreach (var item in Model) {
        @Html.HiddenFor(modelItem => batch[i].ProductId)
        <tr>
            <td>
                @Html.EditorFor(modelItem => batch[i].ProductName)
            </td>
            <td>
                @Html.EditorFor(modelItem => batch[i].Price)
            </td>
            <td>
                @Html.EditorFor(modelItem => batch[i].Active)
            </td>
            <td>
                @Html.EditorFor(modelItem => batch[i].Stock)
            </td>
        </tr>
        i++;
    }
    </table>

    <input type="submit" value="批次更新" />
}
